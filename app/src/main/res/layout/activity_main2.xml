<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg3"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:padding="2dp"
        android:textSize="35sp"
        android:textColor="@color/darkpurple"
        android:background="@drawable/editview"
        android:text="Enter player's name-"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:text="   Player 1-"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/editview"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColor="@color/darkpurple"
        android:textSize="20sp"
        android:hint="e.g-Ram"
        android:id="@+id/playerid1"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:textColorHint="@color/grey"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_bg"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/playerid2"
        android:layout_marginRight="10dp"
        android:text="  Player 2-"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/editview"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:inputType="text"
        android:textColor="@color/darkpurple"
        android:textSize="20sp"
        android:hint="e.g-sam"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:id="@+id/playertv2"
        android:textColorHint="@color/grey"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_bg"/>

    <Button
        android:id="@+id/play_buttonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Play"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:background="@drawable/editview"

        />


</LinearLayout>